{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>puniyu/github-action//.github/renovate"],
  "packageRules": [
    {
      "groupName": "puniyu docs packages",
      "matchManagers": ["pnpm"],
      "rangeStrategy": "auto",
      "schedule": ["at any time"],
      "labels": [
        "dependencies"
      ],
      "automerge": true
    }
  ]
}